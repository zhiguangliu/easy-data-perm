<!--                        <id>sign-artifacts</id>-->
<!--                        <phase>verify</phase>-->
<!--                        <goals>-->
<!--                            <goal>sign</goal>-->
<!--                        </goals>-->
<!--                    </execution>-->
<!--                </executions>-->
<!--            </plugin>-->
        </plugins>
    </build>

    <developers>
        <developer>
            <name>zhgliu</name>
            <email>zhiguangliu1982@gmail.com</email>
            <url></url>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>

    <scm>
        <connection>scm:https://github.com/zhiguangliu/easy-data-perm.git</connection>
        <developerConnection>scm:git:https://github.com/zhiguangliu/easy-data-perm.git</developerConnection>
        <url>https://github.com/zhiguangliu/easy-data-perm</url>
        <tag>1.0.0</tag>
    </scm>

</project>